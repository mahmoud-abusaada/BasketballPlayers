<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.PlayerDetailsActivity"
    android:id="@+id/background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/player_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/player_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Player name"
        android:textSize="24sp"
        android:textColor="#000"
        android:textAlignment="center"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/player_image"/>

    <TextView
        android:id="@+id/player_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Player team"
        android:textSize="24sp"
        android:textColor="#000"
        android:textAlignment="center"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/player_name"/>

    <TextView
        android:id="@+id/player_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Player city"
        android:textSize="24sp"
        android:textColor="#000"
        android:textAlignment="center"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/player_team"/>

</androidx.constraintlayout.widget.ConstraintLayout>